@model List<LavaMenu.Application.Domain.Entitys.ProductCategury>

@using LavaMenu.Application.Common.EncryptionAlgorithem

@inject IConfiguration _configure;

@{
    Layout = null;
}


@foreach (var item in Model as List<LavaMenu.Application.Domain.Entitys.ProductCategury>)
{
    <a asp-controller="Customer" asp-action="Index" asp-route-categuryID="@item.CateguryId.ToString().EncryptStringDES(_configure["secretKey"])">
        <figure class="figure d-block">
            <img src="~/@item.SrcCategury"
                 class="figure-img img-fluid rounded-circle"
                 alt="@item.CateguryName" />
            <figcaption class="figure-caption text-light text-center">
                @item.CateguryName
            </figcaption>
        </figure>
    </a>
}

