                <tr>
                    <th scope="row">2s</th>
                    <td>‌ <img src="~/images/ProductImages/638458680366292203arsham_fadaie_Anonymous_hackers.png" alt="test" width="100" height="100"> </td>
                    <td>شیک ها</td>
                    <td>غیر فعال</td>
                    <td>
                        <button type="button" class="btn btn-danger">فعال</button>
                    </td>

                    <td>
                        <button type="button" class="btn btn-warning">تصحیح</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger">حذف</button>
                    </td>
                </tr>
            *@
        </tbody>
    </table>
</div>
