<!-- add categury btn contanier  -->
<div class="btn-container custom-glass d-flex justify-content-end p-3">
    <a class="btn btn-danger "
       data-bs-toggle="modal"
       data-bs-target="#addCateguryBtnModal">
        add categury
    </a>
</div>
<!-- Modal add categury -->
<div class="modal fade"
     id="addCateguryBtnModal"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-white custom-glass">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    افزون محصول جدید
                </h1>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body custom-direction">
                <div class="mb-3 text-black">
                    <label for="formFile" class="form-label">
                        ابتدا وارد سایت زیر بشین و عکس خود را فشرده سازی کنید سپس
                        بارگزاری کنید<br />
                        <a href="https://imagecompressor.com/" target="_blank">click this</a>
                    </label>
                    <input class="form-control" type="file" id="AddCateguryImage" />
                    <label for="AddCateguryImage" class="mt-1">Default file input (PNG,JPEG)</label>
                </div>
                <div class="form-floating mb-3 text-black">
                    <input type="text"
                           class="form-control"
                           id="addCateguryTitle"
                           placeholder="عنوان"
                           required />
                    <label for="addCateguryTitle">عنوان</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        id="addCategurySubmit"
                        class="btn btn-danger"
                        data-bs-dismiss="modal">
                    ذخیره
                </button>
            </div>
        </div>
    </div>
</div>


